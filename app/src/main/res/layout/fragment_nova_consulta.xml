<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bestsolutions.net.consultamais.NovaConsulta"
    android:weightSum="1">

    <android.support.v7.widget.AppCompatSpinner

        android:id="@+id/listaPacientes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:entries="@array/listaPacientes"
        style="@style/Widget.AppCompat.Spinner.Underlined">
        <!--       android:prompt="@string/SelectPatience"-->
    </android.support.v7.widget.AppCompatSpinner>


    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/especialidadesSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:entries="@array/especialidadesSpinner"
        style="@style/Widget.AppCompat.Spinner.Underlined">
<!--        android:prompt="@string/SelectSpeciality">-->
        </android.support.v7.widget.AppCompatSpinner>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editText"
        android:text="Hora da Consulta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Escolha a data da consulta:"
        android:id="@+id/textView2"
        android:layout_weight="0.20" />

    <CalendarView android:layout_width="180dp"  android:layout_height="190dp"

       android:layout_gravity="right">
           android:id="@+id/calendarView1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_alignParentLeft="true"
           android:layout_marginTop="20dp"
           android:showWeekNumber="false"/>
   </CalendarView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/button"
        android:shadowColor="@color/cardview_dark_background"
        android:layout_gravity="right"
        />


</LinearLayout>
