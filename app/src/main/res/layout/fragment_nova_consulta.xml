<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bestsolutions.net.consultamais.NovaConsulta">

    <android.support.v7.widget.AppCompatSpinner

        android:id="@+id/listaPacientes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:entries="@array/listaPacientes"
        style="@style/Widget.AppCompat.Spinner.Underlined">
        <!--       android:prompt="@string/SelectPatience"-->
    </android.support.v7.widget.AppCompatSpinner>


    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/especialidadesSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:entries="@array/especialidadesSpinner"
        style="@style/Widget.AppCompat.Spinner.Underlined">
<!--        android:prompt="@string/SelectSpeciality">-->
        </android.support.v7.widget.AppCompatSpinner>

   <CalendarView android:layout_width="180dp"  android:layout_height="190dp">
           android:id="@+id/calendarView1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_alignParentLeft="true"
           android:layout_marginTop="20dp"
           android:showWeekNumber="false"/>
   </CalendarView>


</LinearLayout>
